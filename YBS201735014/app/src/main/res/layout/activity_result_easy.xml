<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/confetti_bg"
    tools:context=".Result_easy_Activity">


    <TextView
        android:id="@+id/grade_easy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:padding="16dp"
        android:textSize="34sp"
        android:textColor="@color/purple_200"
        android:textAlignment="center"
        android:text=""></TextView>

    <TextView
        android:id="@+id/outOf_easy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/grade_easy"
        android:layout_marginTop="150dp"
        android:fontFamily="casual"
        android:padding="20dp"
        android:textAlignment="center"
        android:textColor="@color/purple_200"
        android:textSize="24sp"></TextView>


    <ImageView
        android:id="@+id/imageView_result_easy"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="400dp" />

    <Button
        android:id="@+id/retry_easy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/outOf_easy"
        android:text="Retry Quizz"
        android:padding="8dp"
        android:layout_marginTop="270dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"></Button>











</RelativeLayout>