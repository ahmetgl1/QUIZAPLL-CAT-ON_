<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".quiz_easy_activity"
    android:background="@drawable/bg_720x1323"
    android:id="@+id/relativeLayout">

    <RelativeLayout
        android:id="@+id/score_easy"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="@color/white"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/puan_easy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="Score "
            android:textColor="@color/purple"
            android:textSize="30sp" />


        <TextView
            android:id="@+id/points_easy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="0"
            android:textColor="@color/purple"
            android:textSize="30sp"></TextView>
    </RelativeLayout><!--ilk-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="180dp"
        android:layout_marginRight="20dp"

        android:layout_marginBottom="20dp">


        <ImageView
            android:id="@+id/imageView_easy"
            android:layout_width="220dp"
            android:layout_height="200dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="80dp"
            android:scaleType="fitCenter"></ImageView>

    </LinearLayout><!--resim k覺sm覺-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="420dp"
        android:layout_marginRight="15dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/question_easy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="21sp"
            android:fontFamily="casual"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:padding="10dp"></TextView>
    </LinearLayout>



    <!--orta k覺s覺m gelecek-->
    <LinearLayout
        android:id="@+id/alt"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/white"
        android:layout_alignParentBottom="true">

        <ImageButton
            android:id="@+id/trueButton_easy"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="#2ecc71"
            android:src="@drawable/ic_action_name"


            tools:ignore="SpeakableTextPresentCheck" />
        <ImageButton
            android:id="@+id/falseButton_easy"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#e74c3c"
            android:layout_margin="3dp"
            android:src="@drawable/ic_action_close"
            android:layout_weight="1"/>
    </LinearLayout>





</RelativeLayout><!--son-->